RecentPlayInterface, #mask {
    background-color: white;
}

/*设置标签文本左对齐*/
QLabel,
QPushButton {
    text-align: left;
    background-color: transparent;
    font: 16px 'Segoe UI', 'Microsoft YaHei';
    border: none;
}

QLabel#sortModeLabel {
    color: black;
}

QLabel#recentPlayLabel {
    color: black;
    font-family: 'Microsoft YaHei Light';
    font-size: 43px;
    padding: 0px;
}


QPushButton#sortModeButton {
    color: rgb(0, 107, 131);
    padding-top: 3px;
    padding-bottom: 3px;
}

QPushButton#sortModeButton:hover {
    color: rgb(59, 165, 194);
}

QPushButton#randomPlayButton,
QPushButton#sortModeButton {
    font-size: 16px;
}

QPushButton#randomPlayButton {
    font: 15px 'Segoe UI', 'Microsoft YaHei';
    padding-bottom: 1px;
    color: black;
}

QPushButton#randomPlayButton:hover {
    color: rgba(0, 0, 0, 0.8);
}

QPushButton#randomPlayButton:pressed {
    color: rgba(0, 0, 0, 0.6);
}

SelectionModeInterface {
    background-color: white;
}

#scrollWidget {
    background-color: white;
}

QScrollArea {
    border: none;
}

/*滚动条*/
QScrollBar {
    background: transparent;
    width: 5px;
    margin-top: 60px;
    margin-bottom: 133px;
    margin-right: 2px;
}

/*隐藏上箭头*/
QScrollBar::sub-line {
    background: transparent;
}

/*隐藏下箭头*/
QScrollBar::add-line {
    background: transparent;
}

QScrollBar::handle {
    background: rgb(128, 128, 128);
    border: 2px solid rgb(128, 128, 128);
    border-radius: 1px;
    min-height: 40px;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}
SongGroupBox {
    background-color: white;
}

QSvgWidget {
    background-color: transparent;
}

#titleButton {
    font: 24px 'Segoe UI', 'Microsoft YaHei';
    padding: 0;
    background-color: transparent;
    border: none;
}

#titleButton:hover {
    color: rgba(0, 0, 0, 0.8);
}

#titleButton:pressed {
    color: rgba(0, 0, 0, 0.4);
}

QPushButton#showAllButton {
    color: rgb(0, 107, 131);
    font: 15px 'Segoe UI', 'Microsoft YaHei';
    padding-bottom: 6px;
    margin: 0;
    background-color: transparent;
    border: none;
}

QPushButton#showAllButton:hover {
    color: rgba(0, 107, 131, 0.8);
}

QPushButton#showAllButton:pressed {
    color: rgba(0, 107, 131, 0.6);
}

ClickableLabel {
    font: 18px 'Segoe UI', 'Microsoft YaHei';
}

ClickableLabel[loadFinished="false"] {
    color: rgb(0, 107, 131);
}

ClickableLabel[loadFinished="false"]:hover {
    color: rgb(0, 153, 188);
}

ClickableLabel[loadFinished="true"] {
    color: rgba(0, 0, 0, 0.4);
}
QWidget {
    background-color: transparent;
}

QWidget#leftMask,
QWidget#rightMask {
    background-color: white;
}

QScrollArea {
    background-color: white;
    border: none;
}

QLabel {
    font: 17px 'Microsoft YaHei Light';
    background-color: transparent;
}

#titleButton {
    font: 24px 'Segoe UI', 'Microsoft YaHei';
    padding: 0;
    background-color: transparent;
    border: none;
}

#titleButton:hover {
    color: rgba(0, 0, 0, 0.8);
}

#titleButton:pressed {
    color: rgba(0, 0, 0, 0.4);
}

QLabel#singerLabel[isChecked='False'] {
    color: black;
    font-family: 'Segoe UI', 'Microsoft YaHei';
    font-weight: bold;
}

QLabel#singerLabel[isChecked='True'] {
    color: white;
    font-family: 'Segoe UI', 'Microsoft YaHei';
    font-weight: bold;
}

QPushButton#showAllButton {
    color: rgb(0, 107, 131);
    font: 15px 'Segoe UI', 'Microsoft YaHei';
    padding-bottom: 6px;
    border: none;
}

QPushButton#showAllButton:hover {
    color: rgba(0, 107, 131, 0.8);
}

QPushButton#showAllButton:pressed {
    color: rgba(0, 107, 131, 0.6);
}
